- if @issue && @issue.assigned_to.is_a?(Group)
  :css
    #group_members ul {margin: 0;  padding: 0;}
    #group_members li {list-style-type:none; margin: 0px 2px 0px 0px; padding: 0px 0px 0px 0px;}
    #group_members img.gravatar {vertical-align: middle; margin: 0 4px 2px 0;}
  %h3
    = l(:label_group_member_plural)
    = "(#{@issue.assigned_to.users.size})"

  #group_members
    %ul
      - @issue.assigned_to.users.each do |user|
        %li
          = avatar(user, :size => "16")
          = link_to_user user, :class => :user
